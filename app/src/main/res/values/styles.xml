<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="RadioGroupTabLayout">
        <attr name="tabLayoutBackgroundColor" format="color|integer" />
        <attr name="tabLayoutDefaultTextColor" format="color|integer" />
        <attr name="tabLayoutTextSize" format="dimension|integer" />
        <attr name="tabLayoutSelectedTextColor" format="color|integer" />
        <attr name="tabLayoutPadding" format="dimension|integer" />
        <attr name="tabLayoutLineColor" format="color|integer" />
        <attr name="tabLayoutDefaultSelectIndex" format="integer" />
    </declare-styleable>

</resources>
